.MODEL SMALL
.STACK 100H

.DATA
N     DW 6
R     DW 2
NCR   DW 0

.CODE
MAIN:
    MOV AX, @DATA
    MOV DS, AX

    MOV AX, N
    MOV BX, R

    CALL NCR_PROC
    MOV NCR, AX

    MOV AH, 4CH
    INT 21H

NCR_PROC PROC
    PUSH CX
    PUSH DX
    PUSH SI
    PUSH DI

    CMP AX, BX
    JE BASE1
    CMP BX, 0
    JE BASE1
    CMP BX, 1
    JE BASE2
    MOV CX, AX
    DEC CX
    CMP CX, BX
    JE BASE2

    PUSH AX
    PUSH BX
    DEC AX
    CALL NCR_PROC
    MOV SI, AX

    POP BX
    POP AX

    DEC AX
    DEC BX
    CALL NCR_PROC
    ADD AX, SI

    JMP ENDNCR

BASE1:
    MOV AX, 1
    JMP ENDNCR

BASE2:
    JMP ENDNCR

ENDNCR:
    POP DI
    POP SI
    POP DX
    POP CX
    RET
NCR_PROC ENDP

END MAIN
